{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Marble",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#brackets"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#block_tags"
		},
		{
			"include": "#pattern_tags"
		},
		{
			"include": "#target_tags"
		},
		{
			"include": "#pre-tags"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.marble",
					"match": "\\/\\/.*"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.marble",
			"begin": "(\"|'|`)",
			"end": "(\"|'|`)",
			"patterns": [
				{
					"name": "constant.character.escape.marble",
					"match": "\\\\."
				}
			]
		},
		"brackets": {
			"patterns": [
				{
					"name": "meta.brace.square.marble",
					"match": "(\\[|\\])"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.decimal.marble",
					"match": "\\d+"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.logical.marble",
					"match": "(\\+|-|\\/|\\*|>|<|==|>=|<=)"
				}
			]
		},
		"block_tags":{
			"patterns": [
				{
					"name": "variable.other.constant.marble",
					"match": "\\b(p|c|target|end)\\b"
				}
			]
		},
		"pattern_tags": {
			"patterns": [
				{
					"name": "variable.marble",
					"match": "\\b(sym|var|rec|s|;)\\b"
				}
			]
		},
		"target_tags": {
			"patterns": [
				{
					"name": "entity.name.function.marble",
					"match": "\\b(if|loop)\\b"
				}
			]
		},
		"pre-tags": {
			"patterns": [
				{
					"name": "support.function.marble",
					"match": "\\b(n|i)\\b"
				}
			]
		}
	},
	"scopeName": "source.marble"
}